<%= form_for(@categories, url: category_choose_new_or_edit) do |f| %>

  <% if @categories.errors.any? %>
    <div id="error_explanation">
      <h2><%= @categories.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @categories.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name, "カテゴリ名" %>
  <%= f.text_field :name, class: 'form-control' %>
  <br>
  <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
<% end %>
