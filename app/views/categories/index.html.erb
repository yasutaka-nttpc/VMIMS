<div class="container">
  <div class="row">
  <div class="wrapper col-md-12 col-sm-10">

    <p><%= notice %></p>
    <h1>カテゴリ一覧</h1>

    <p>
      <%= link_to "追加", new_category_path, class: 'btn btn-default' %>
    </p>

    <div class="table-responsive">
      <table class="table table-striped 
      table-bordered table-hover">
        <thead>
          <tr>
            <th>No.</th>
            <th>カテゴリ</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <th><%= category.id %></th>
              <td><%= category.name %></td>
              <td>
                <%= link_to "編集", edit_category_path(category.id), class: 'btn btn-default btn-sm btn-success' %>
                <%= link_to "削除", category_path(category.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
    </div>
</div>
