<div class="container">
  <div class="row">
  <div class="wrapper col-md-12 col-sm-10">

    <p><%= notice %></p>
    <h1>グループ一覧</h1>

    <p>
      <%= link_to "追加", new_group_path, class: 'btn btn-default' %>
    </p>

    <div class="table-responsive">
      <table class="table table-striped 
      table-bordered table-hover">
        <thead>
          <tr>
            <th>No.</th>
            <th>グループ</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <th><%= group.id %></th>
              <td><%= group.name %></td>
              <td>
                <%= link_to "編集", edit_group_path(group.id), class: 'btn btn-default btn-sm btn-success' %>
                <%= link_to "削除", group_path(group.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
    </div>
</div>
