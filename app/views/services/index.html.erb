<div class="container">
  <div class="row">
  <div class="wrapper col-xs-12 col-sm-12 col-md-12 col-lg-12">

    <p><%= notice %></p>
    <h1>サービス一覧</h1>

    <p>
      <%= link_to "追加", new_service_path, class: 'btn btn-default' %>
    </p>

    <div class="table-responsive">
      <table class="table table-striped 
      table-bordered table-hover">
        <thead>
          <tr>
            <th>No.</th>
            <th>サービス</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @services.each do |service| %>
            <tr>
              <th><%= service.id %></th>
              <td><%= service.name %></td>
              <td>
                <%= link_to "編集", edit_service_path(service.id), class: 'btn btn-default btn-sm btn-success' %>
                <%= link_to "削除", service_path(service.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
    </div>
</div>
