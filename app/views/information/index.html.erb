<div class="container">
  <div class="row">
  <div class="wrapper col-md-12 col-sm-10">

    <p><%= notice %></p>
    <h1>登録情報一覧</h1>

    <p>
      <%= link_to "追加", new_information_path, class: 'btn btn-default' %>
    </p>

    <div class="table-responsive">
      <table class="table table-striped 
      table-bordered table-hover">
        <thead>
          <tr>
            <th>No.</th>
            <th>サービスID</th>
            <th>グループID</th>
            <th>機種別ID</th>
            <th>環境ID</th>
            <th>機器名</th>
            <th>シリアルナンバー</th>
            <th>サーバー名</th>
            <th>保守ベンダー</th>
            <th>保守契約期間</th>
            <th>保守番号</th>
            <th>ハード保守条件</th>
            <th>ハード保守電話番号</th>
            <th>ハード保守メールアドレス</th>
            <th>ハード保守その他</th>
            <th>ソフト保守条件</th>
            <th>ソフト保守電話番号</th>
            <th>ソフト保守メールアドレス</th>
            <th>ソフト保守その他</th>
            <th>OSバージョン</th>
            <th>ハード保守期限</th>
            <th>ソフト保守期限</th>
            <th>営業担当者</th>
            <th>営業電話番号</th>
            <th>営業メールアドレス</th>
            <th>備考1</th>
            <th>備考2</th>
            <th>備考3</th>
            <th>保守期限アラート無効</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @information.each do |info| %>
            <tr>
              <th><%= info.id %></th>
              <td>
                <% if (info.service.blank?) %>
                  <%= info.service %>
                <% else %>
                  <%= Service.find(info.service).name %>
                <% end %>
              </td>
              <td>
                <% if (info.group.blank?) %>
                  <%= info.group %>
                <% else %>
                  <%= Group.find(info.group).name %>
                <% end %>
              </td>
              <td>
                <% if (info.category.blank?) %>
                  <%= info.category %>
                <% else %>
                  <%= Category.find(info.category).name %>
                <% end %>
              </td>
              <td>
                <% if (info.environment.blank?) %>
                  <%= info.environment %>
                <% else %>
                  <%= Environment.find(info.environment).name %>
                <% end %>
              </td>
              <td><%= info.name %></td>
              <td><%= info.serial %></td>
              <td><%= info.server_name %></td>
              <td><%= info.support_contact %></td>
              <td><%= info.support_contact_period %></td>
              <td><%= info.support_id %></td>
              <td><%= info.hard_support_conditions %></td>
              <td><%= info.hard_contact_tel %></td>
              <td><%= info.hard_contact_mail %></td>
              <td><%= info.hard_contact_other %></td>
              <td><%= info.soft_support_conditions %></td>
              <td><%= info.soft_contact_tel %></td>
              <td><%= info.soft_contact_mail %></td>
              <td><%= info.soft_contact_other %></td>
              <td><%= info.os_version %></td>
              <td><%= info.eos_hard %></td>
              <td><%= info.eos_soft %></td>
              <td><%= info.sales_contact %></td>
              <td><%= info.sales_contact_tel %></td>
              <td><%= info.sales_contact_mail %></td>
              <td><%= info.remarks_1 %></td>
              <td><%= info.remarks_2 %></td>
              <td><%= info.remarks_3 %></td>
              <td><%= info.non_alert_flag %></td>
              <td>
                <%= link_to "編集", edit_information_path(info.id), class: 'btn btn-default btn-sm btn-success' %>
                <%= link_to "削除", information_path(info.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <p>
      <%= link_to "サービス一覧", services_path, class: 'btn btn-default' %>
      <%= link_to "グループ一覧", groups_path, class: 'btn btn-default' %>
      <%= link_to "カテゴリ一覧", categories_path, class: 'btn btn-default' %>
      <%= link_to "環境一覧", environments_path, class: 'btn btn-default' %>
    </p>
  </div>
  </div>
</div>
